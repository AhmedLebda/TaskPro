{
  "name": "backend-template",
  "version": "1.1.0",
  "description": "TaskPro is a comprehensive task and user management application designed for small startup businesses. The app provides a centralized dashboard where users can manage tasks and user information with varying levels of access and permissions.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --env-file=.env ./index.ts",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test node --env-file=.env --test --test-concurrency=1",
    "build:ui": "rm -rf public && cd ../frontend && npm run build && cp -r dist ../backend/public",
    "lint": "eslint 'src/**/*.{ts,tsx}'"
  },
  "keywords": [
    "node",
    "express",
    "mongo",
    "mongoose",
    "js"
  ],
  "author": "Ahmed Lebda",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose-sequence": "^3.0.11",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
